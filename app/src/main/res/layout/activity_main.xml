<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:text="@string/hello_world"
        android:layout_height="wrap_content"/>


<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="3"
    android:id="@+id/table"
   >

        <ImageView
        android:id="@+id/field1"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        android:layout_column="0"
        android:layout_row="0"
        android:layout_width="0dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:src="@drawable/blank" />
    <!-- NB: the layout_columnWeight and layout_rowWeight are only
         supported on API level 21 (Android 5.0) and above -->

          <ImageView
        android:id="@+id/field2"
        android:scaleType="fitXY"
        android:layout_width="0dp"
        android:layout_column="1"
        android:layout_row="0"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_height="0dp"
        android:src="@drawable/kryds" />
        
        <ImageView
        android:id="@+id/field3"
        android:scaleType="fitXY"
        android:layout_columnWeight="1"
        android:layout_column="2"
        android:layout_row="0"
        android:layout_width="0dp"
        android:layout_rowWeight="1"
        android:layout_height="0dp"
        android:src="@drawable/kryds" />

      
        <ImageView
        android:id="@+id/field4"
        android:layout_column="0"
        android:layout_row="1"
        android:scaleType="fitXY"
        android:layout_width="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_height="0dp"
        android:src="@drawable/kryds" />

        <ImageView
            android:layout_column="1"
            android:layout_row="1"
            android:id="@+id/field5"
            android:scaleType="fitXY"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:src="@drawable/blank" />

           <ImageView
            android:id="@+id/field6"
            android:layout_column="2"
            android:layout_row="1"
            android:scaleType="fitXY"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:src="@drawable/bolle" />

       
       <ImageView
           android:layout_column="0"
           android:layout_row="2"
           android:layout_rowWeight="1"
           android:id="@+id/field7"
           android:layout_width="0dp"
           android:layout_columnWeight="1"
           android:scaleType="fitXY"
           android:layout_height="0dp"
           android:src="@drawable/blank" />

          <ImageView
        android:id="@+id/field8"
        android:layout_column="1"
        android:layout_row="2"
        android:layout_width="0dp"
        android:layout_columnWeight="1"
        android:scaleType="fitXY"
        android:layout_rowWeight="1"
        android:layout_height="0dp"
        android:src="@drawable/bolle" />

           <ImageView
        android:id="@+id/field9"
        android:scaleType="fitXY"
        android:layout_column="2"
        android:layout_row="2"
        android:layout_width="0dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_height="0dp"
        android:src="@drawable/blank" />

</GridLayout>
</LinearLayout>